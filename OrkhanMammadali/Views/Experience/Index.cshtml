@model IEnumerable<OrkhanMammadali.Models.ViewModel.ExperienceViewModel>

@{
    ViewData["Title"] = "Experience";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Experience</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spesiality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IconName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pozition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spesiality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IconName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pozition)
            </td>
            <td>
                <a href="/Experience/Edit/@item.Id">Edit</a> |
                <a href="/Experience/Delete/@item.Id" onclick="return confirm('Seçdiyiniz sətr silinəcək. Silinən məlumatların geri qaytarılması mümkün deyil. \nSətiri yənədə silmək istəyirsinizmi?')">Delete</a>

                <a href="/Experience/Up/@item.Id">Up</a>
                @if (item.Order > 0)
                {
                    <span> - </span><a href="/Experience/Down/@item.Id">Down</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
